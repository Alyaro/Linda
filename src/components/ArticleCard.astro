---
import { format } from 'date-fns';

interface Props {
  title: string;
  summary: string;
  category: string;
  image: string;
  publishDate: Date;
  author: string;
}

const { title, summary, category, image, publishDate, author } = Astro.props;
---

<article class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow">
  <img src={image} alt={title} class="w-full h-48 object-cover" />
  <div class="p-4">
    <span class="text-sm font-medium text-blue-600">{category}</span>
    <h2 class="text-xl font-bold mt-2 mb-2">{title}</h2>
    <p class="text-gray-600 text-sm mb-4">{summary}</p>
    <div class="flex justify-between items-center text-sm text-gray-500">
      <span>{author}</span>
      <time datetime={publishDate.toISOString()}>{format(publishDate, 'MMM d, yyyy')}</time>
    </div>
  </div>
</article>